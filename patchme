#!/bin/bash
#patch the ubuntu things
if [ -n "$(which apt-get)" ]
then
  sudo apt-get update
  sudo apt-get upgrade -y
  echo " _____     _______ _____ _    _ ______ _____  
|  __ \ /\|__   __/ ____| |  | |  ____|  __ \ 
| |__) /  \  | | | |    | |__| | |__  | |  | |
|  ___/ /\ \ | | | |    |  __  |  __| | |  | |
| |  / ____ \| | | |____| |  | | |____| |__| |
|_| /_/    \_\_|  \_____|_|  |_|______|_____/ "
fi
#patch the rhel/centos things
if [ -n "$(which yum)" ]
then
  sudo yum update
  echo " _____     _______ _____ _    _ ______ _____
|  __ \ /\|__   __/ ____| |  | |  ____|  __ \
| |__) /  \  | | | |    | |__| | |__  | |  | |
|  ___/ /\ \ | | | |    |  __  |  __| | |  | |
| |  / ____ \| | | |____| |  | | |____| |__| |
|_| /_/    \_\_|  \_____|_|  |_|______|_____/ "
fi
